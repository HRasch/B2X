{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Yarp": "Information"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://127.0.0.1:5173",
      "https://localhost:5173"
    ]
  },
  "Jwt": {
    "Secret": "dev-only-secret-minimum-32-chars-required!"
  },
  "Encryption": {
    "AutoGenerateKeys": true,
    "Key": null,
    "IV": null
  },
  "ReverseProxy": {
    "Routes": {
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": { "Path": "/api/catalog/{**catch-all}" }
      },
      "api-v2-route": {
        "ClusterId": "catalog-cluster",
        "Match": { "Path": "/api/v2/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api/v2" },
          { "PathPrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      "catalog-cluster": {
        "Destinations": {
          "catalog": {
            "Address": "http://catalog-service/"
          }
        }
      }
    }
  }
}
