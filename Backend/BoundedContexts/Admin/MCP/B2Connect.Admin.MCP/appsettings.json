{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "B2Connect.Admin.MCP": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=b2connect_mcp;Username=postgres;Password=password",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Key": "your-super-secret-jwt-key-here-change-in-production",
    "Issuer": "B2Connect-MCP",
    "Audience": "B2Connect-Tenants",
    "ExpiryMinutes": 60
  },
  "Azure": {
    "KeyVault": {
      "Url": "https://your-keyvault.vault.azure.net/"
    }
  },
  "Ai": {
    "Consumption": {
      "DefaultRateLimitPerMinute": 100,
      "DefaultMonthlyBudget": 1000.00,
      "CacheExpirationHours": 24
    },
    "Providers": {
      "OpenAI": {
        "BaseUrl": "https://api.openai.com/v1/",
        "DefaultModel": "gpt-4",
        "Enabled": true
      },
      "Anthropic": {
        "BaseUrl": "https://api.anthropic.com/",
        "DefaultModel": "claude-3-sonnet-20240229",
        "Enabled": true
      },
      "AzureOpenAI": {
        "DefaultEndpoint": "https://your-resource.openai.azure.com/",
        "DefaultModel": "gpt-4",
        "Enabled": true
      }
    }
  },
  "Cache": {
    "RedisConnectionString": "localhost:6379",
    "DefaultExpirationMinutes": 60
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "B2Connect.Admin.MCP": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/mcp-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
