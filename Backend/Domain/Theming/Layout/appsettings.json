{
  "DatabaseConfig": {
    "Provider": "PostgreSQL",
    "UseInMemory": false,
    "ConnectionStrings": {
      "PostgreSQL": "Server=localhost;Port=5432;Database=B2X_layout;User Id=postgres;Password=<configure-via-env-or-keyvault>;",
      "SqlServer": "Server=(local)\\SQLEXPRESS;Database=B2X_Layout;Trusted_Connection=true;Encrypt=false;",
      "InMemory": "Data Source=:memory:"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:7008"
      }
    }
  }
}
