<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <RootNamespace>B2Connect.Theming.Layout</RootNamespace>
    <AssemblyName>B2Connect.Theming.Layout</AssemblyName>
  </PropertyGroup>

  <!-- Exclude tests folder from main project -->
  <ItemGroup>
    <Compile Remove="tests/**" />
    <Compile Remove="tests\**" />
    <None Remove="tests/**" />
    <None Remove="tests\**" />
    <Content Remove="tests/**" />
    <Content Remove="tests\**" />
    <EmbeddedResource Remove="tests/**" />
    <EmbeddedResource Remove="tests\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" />
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" />
    <PackageReference Include="Serilog.AspNetCore" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../../../ServiceDefaults/B2Connect.ServiceDefaults.csproj" />
    <ProjectReference Include="../../../shared/kernel/B2Connect.Shared.Kernel.csproj" />
    <ProjectReference Include="../../../shared/B2Connect.Shared.Core/B2Connect.Shared.Core.csproj" />
  </ItemGroup>

</Project>


