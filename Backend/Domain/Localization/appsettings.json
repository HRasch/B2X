{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Localization": {
    "DefaultLanguage": "en",
    "SupportedLanguages": ["en", "de", "fr", "es", "it", "pt", "nl", "pl"],
    "CacheDuration": 3600,
    "EnableTenantOverrides": true
  },
  "ConnectionStrings": {
    "LocalizationDb": "Host=localhost;Port=5432;Database=B2X_localization;Username=postgres;Password=<configure-via-env-or-keyvault>;Include Error Detail=true;"
  },
  "AllowedHosts": "*"
}
