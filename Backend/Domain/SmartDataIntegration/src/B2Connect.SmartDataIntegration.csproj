<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>B2Connect.SmartDataIntegration</RootNamespace>
    <Description>
      Smart Data Integration service for B2Connect. Provides AI-powered data mapping
      between ERP systems and internal catalogs with intelligent field matching,
      transformation suggestions, and automated validation.
    </Description>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core Dependencies -->
    <PackageReference Include="Microsoft.Extensions.Hosting" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Caching.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Options" />

    <!-- AI/ML Dependencies -->
    <PackageReference Include="Microsoft.ML" />
    <PackageReference Include="Microsoft.ML.FastTree" />
    <PackageReference Include="Microsoft.Extensions.AI" />

    <!-- Data Access -->
    <PackageReference Include="Microsoft.EntityFrameworkCore" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" />
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" />

    <!-- JSON Processing -->
    <PackageReference Include="Newtonsoft.Json" />

    <!-- Validation -->
    <PackageReference Include="FluentValidation" />

    <!-- Resilience -->
    <PackageReference Include="Polly" />

    <!-- Wolverine for messaging -->
    <PackageReference Include="WolverineFx" />

    <!-- Redis for caching -->
    <PackageReference Include="StackExchange.Redis" />
  </ItemGroup>

  <ItemGroup>
    <!-- Project References -->
    <ProjectReference Include="..\..\..\shared\kernel\B2Connect.Shared.Kernel.csproj" />
    <ProjectReference Include="..\..\..\shared\B2Connect.Shared.Core\B2Connect.Shared.Core.csproj" />
    <ProjectReference Include="..\..\..\shared\B2Connect.Shared.Messaging\B2Connect.Shared.Messaging.csproj" />
    <ProjectReference Include="..\..\..\shared\B2Connect.Shared.Infrastructure\B2Connect.Shared.Infrastructure.csproj" />
    <ProjectReference Include="..\..\..\shared\types\B2Connect.Types.csproj" />
    <ProjectReference Include="..\..\..\shared\utils\B2Connect.Utils.csproj" />
    <ProjectReference Include="..\..\ERP\Abstractions\B2Connect.ERP.Abstractions.csproj" />
  </ItemGroup>

</Project>