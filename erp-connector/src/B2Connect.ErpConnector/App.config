<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- Base address for the HTTP API -->
    <add key="BaseAddress" value="http://localhost:5081" />
    
    <!-- API Key for authentication (leave empty to disable auth in development) -->
    <!-- Can also be set via ERP_CONNECTOR_API_KEY environment variable -->
    <add key="ApiKey" value="" />
    
    <!-- ERP Connection settings (placeholder for enventa) -->
    <add key="ErpServer" value="localhost" />
    <add key="ErpDatabase" value="enventa" />
    <add key="ErpUsername" value="" />
    <add key="ErpPassword" value="" />
    
    <!-- EnventaGlobalFactory pool settings (based on eGate FSGlobalFactory) -->
    <add key="ErpPoolSize" value="5" />
    
    <!-- Actor pool settings -->
    <add key="ActorPool.MaxOperationsInQueue" value="1000" />
    <add key="ActorPool.ConnectionTimeoutSeconds" value="30" />
    
    <!-- Allowed business units (comma-separated). Empty = unrestricted (all allowed) -->
    <!-- Example: "10,20,30" restricts to only these business units -->
    <add key="AllowedBusinessUnits" value="" />
    
    <!-- Enable tenant-coupled API keys (true/false). When enabled, API keys are tied to specific tenants. -->
    <!-- On first run with this enabled, an admin key will be generated in config/api-keys.json -->
    <!-- Set to false to use legacy single API key mode (ApiKey setting above) -->
    <add key="UseTenantKeys" value="true" />
  </appSettings>
  
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Runtime.CompilerServices.Unsafe" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>
</configuration>
