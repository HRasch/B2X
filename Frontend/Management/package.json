{
  "name": "b2connect-tenant",
  "version": "1.0.0",
  "description": "B2Connect Tenant Management Portal - Manage store instances and administrator identities",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
    "e2e:responsive": "playwright test tests/e2e/responsive.spec.ts",
    "e2e:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "e2e:quality": "playwright test tests/e2e/accessibility.spec.ts tests/e2e/responsive.spec.ts tests/e2e/visual-regression.spec.ts",
    "axe": "axe http://localhost:5175 --exit --verbose"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "axios": "^1.7.7",
    "marked": "^14.1.2",
    "pinia": "^2.2.6",
    "typescript": "^5.9.3",
    "vue": "^3.5.13",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^9.33.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.47",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "vite": "^6.0.5",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.1"
  }
}
