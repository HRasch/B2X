{
  "name": "b2connect-admin-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:telemetry": "ENABLE_TELEMETRY=true OTEL_SERVICE_NAME=frontend-admin node --import ./instrumentation.ts node_modules/vite/bin/vite.js",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "quality-check": "npm run type-check && npm run lint && npm run test:coverage",
    "pre-commit": "npm run quality-check",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    "e2e:auth": "playwright test tests/e2e/auth.spec.ts",
    "e2e:cms": "playwright test tests/e2e/cms.spec.ts",
    "e2e:catalog": "playwright test tests/e2e/shop.spec.ts",
    "e2e:integration": "playwright test tests/e2e/integration.spec.ts",
    "e2e:performance": "playwright test tests/e2e/performance.spec.ts",
    "e2e:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
    "e2e:responsive": "playwright test tests/e2e/responsive.spec.ts",
    "e2e:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "e2e:quality": "playwright test tests/e2e/accessibility.spec.ts tests/e2e/responsive.spec.ts tests/e2e/visual-regression.spec.ts",
    "axe": "axe http://localhost:5174 --exit --verbose"
  },
  "dependencies": {
    "@guolao/vue-monaco-editor": "^1.6.0",
    "@tailwindcss/postcss": "^4.1.18",
    "axios": "^1.13.2",
    "daisyui": "^5.5.14",
    "date-fns": "^3.6.0",
    "dompurify": "^3.2.7",
    "grapesjs": "^0.22.14",
    "grapesjs-preset-newsletter": "^1.0.2",
    "pinia": "^2.2.6",
    "vue": "^3.5.26",
    "vue-i18n": "^11.2.8",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.11.0",
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.56.1",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.57.2",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.57.2",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-metrics": "^1.30.1",
    "@opentelemetry/sdk-node": "^0.57.2",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^9.33.0",
    "happy-dom": "^20.0.11",
    "lighthouse": "^13.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "strip-literal": "^3.1.0",
    "tailwindcss": "^4.1.18",
    "terser": "^5.36.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vue-tsc": "^3.2.1"
  }
}
