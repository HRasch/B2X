      "args": ["--host"],
      "cwd": "${workspaceFolder}/frontend/Store",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Local:.*http://localhost:(\\d+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    },
    {
      "name": "üé® Frontend Admin (Dev)",
