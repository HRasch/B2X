{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸš€ Aspire AppHost (InMemory)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-apphost",
      "program": "${workspaceFolder}/backend/services/Orchestration/bin/Debug/net10.0/B2Connect.Orchestration.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/services/Orchestration",
      "stopAtEntry": false,
      "serverReadyAction": {
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "{0}",
        "action": "openExternally"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "Database__Provider": "inmemory",
        "DOTNET_DASHBOARD_UNSECURED_ALLOW_ANONYMOUS": "true"
      },
      "console": "integratedTerminal"
    },
    {
      "name": ".NET Core (Backend) - PostgreSQL",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-apphost",
      "program": "${workspaceFolder}/backend/services/Orchestration/bin/Debug/net10.0/B2Connect.Orchestration.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/services/Orchestration",
      "stopAtEntry": false,
      "serverReadyAction": {
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "{0}",
        "action": "openExternally"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "Database__Provider": "postgresql"
      }
    },
    {
      "name": "Frontend (npm dev)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/frontend/node_modules/.bin/vite",
      "args": ["--host"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "pattern": "VITE.*ready in.*ms",
        "uriFormat": "http://localhost:5173",
        "action": "openExternally"
      }
    },
    {
      "name": ".NET + Frontend (Parallel)",
      "type": "compound",
      "configurations": [".NET Core (Backend) - PostgreSQL", "Frontend (npm dev)"],
      "stopAll": true
    },
    {
      "name": "ðŸš€ Aspire AppHost + Frontend (InMemory)",
      "type": "compound",
      "configurations": ["ðŸš€ Aspire AppHost (InMemory)", "Frontend (npm dev)"],
      "stopAll": true,
      "preLaunchTask": "npm-install-frontend"
    },
    {
      "name": "Frontend Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/frontend/node_modules/vitest/vitest.mjs",
      "args": ["run"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal"
    },
    {
      "name": "Backend Tests (.NET)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "test-backend",
      "program": "${workspaceFolder}/backend/Tests/B2Connect.CMS.Tests/bin/Debug/net10.0/B2Connect.CMS.Tests.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/Tests/B2Connect.CMS.Tests",
      "stopAtEntry": false,
      "console": "integratedTerminal"
    }
  ]
}
