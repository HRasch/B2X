{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸš€ Full Stack (Aspire)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "backend-start",
      "program": "${workspaceFolder}/backend/services/Orchestration/bin/Debug/net10.0/B2Connect.Orchestration.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/services/Orchestration",
      "stopAtEntry": false,
      "serverReadyAction": {
        "pattern": "dashboard",
        "uriFormat": "http://localhost:15500",
        "action": "openExternally"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "Database__Provider": "inmemory",
        "DOTNET_DASHBOARD_UNSECURED_ALLOW_ANONYMOUS": "true",
        "ASPIRE_ALLOW_UNSECURED_TRANSPORT": "true"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Aspire (PostgreSQL)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-apphost",
      "program": "${workspaceFolder}/backend/services/Orchestration/bin/Debug/net10.0/B2Connect.Orchestration.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/services/Orchestration",
      "stopAtEntry": false,
      "serverReadyAction": {
        "pattern": "dashboard",
        "uriFormat": "http://localhost:15500",
        "action": "openExternally"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "Database__Provider": "postgresql",
        "DOTNET_DASHBOARD_UNSECURED_ALLOW_ANONYMOUS": "true",
        "ASPIRE_ALLOW_UNSECURED_TRANSPORT": "true"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Frontend Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/frontend-store/node_modules/vitest/vitest.mjs",
      "args": ["run"],
      "cwd": "${workspaceFolder}/frontend-store",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Backend Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "test-backend",
      "program": "${workspaceFolder}/backend/Tests/B2Connect.CMS.Tests/bin/Debug/net10.0/B2Connect.CMS.Tests.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend",
      "stopAtEntry": false,
      "console": "integratedTerminal"
    }
  ]
}
