      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/backend/Orchestration/bin/Debug/net10.0/B2Connect.Orchestration.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/Orchestration",
      "stopAtEntry": false,
      "serverReadyAction": {
        "pattern": "dashboard",
        "uriFormat": "http://localhost:15500",
        "action": "openExternally"
