{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Full Stack",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/AppHost/bin/Debug/net10.0/B2Connect.AppHost.dll",
      "args": [],
      "cwd": "${workspaceFolder}/AppHost",
      "stopAtEntry": false,
      "serverReadyAction": {
        "pattern": "dashboard",
        "uriFormat": "http://localhost:15500",
        "action": "openExternally"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:15500",
        "DOTNET_DASHBOARD_OTLP_ENDPOINT_URL": "http://localhost:4317",
        "ASPIRE_ALLOW_UNSECURED_TRANSPORT": "true",
        "DOTNET_DASHBOARD_UNSECURED_ALLOW_ANONYMOUS": "true",
        "Database__Provider": "inmemory"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üöÄ Full Stack (PostgreSQL)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/AppHost/bin/Debug/net10.0/B2Connect.AppHost.dll",
      "args": [],
      "cwd": "${workspaceFolder}/AppHost",
      "stopAtEntry": false,
      "serverReadyAction": {
        "pattern": "dashboard",
        "uriFormat": "http://localhost:15500",
        "action": "openExternally"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development",
        "Database__Provider": "postgres",
        "DOTNET_DASHBOARD_UNSECURED_ALLOW_ANONYMOUS": "true",
        "ASPIRE_ALLOW_UNSECURED_TRANSPORT": "true"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "üì± Frontend Store (Dev)",
      "type": "node",
