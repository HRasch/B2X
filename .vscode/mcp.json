        "--project",
        "tools/RoslynMCP/RoslynMCP.csproj"
      ],
      "env": {
        "DOTNET_ENVIRONMENT": "Production",
        "LOG_LEVEL": "Information",
        "LOG_TO_CONSOLE": "false"
      },
      "disabled": false
    },
    "typescript-mcp": {
      "command": "node",
