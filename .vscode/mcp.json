{
  "mcpServers": {
    "B2X-admin": {
      "command": "node",
      "args": [
        "scripts/mcp-console-logger.js",
        "B2X-admin",
        "dotnet",
        "run",
        "--project",
        "backend/BoundedContexts/Admin/MCP/B2X.Admin.MCP/B2X.Admin.MCP.csproj"
      ],
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:8091",
        "DOTNET_DASHBOARD_UNSECURED_ALLOW_ANONYMOUS": "true",
        "LOG_TO_CONSOLE": "true"
      },
      "disabled": false
    },
