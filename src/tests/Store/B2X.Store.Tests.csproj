<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <RootNamespace>B2X.Store.Tests</RootNamespace>
    <AssemblyName>B2X.Store.Tests</AssemblyName>
    <IsTestProject>true</IsTestProject>
    <OutputType>Exe</OutputType>
    <UseMicrosoftTestingPlatformRunner>true</UseMicrosoftTestingPlatformRunner>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
<PackageReference Include="xunit.v3.mtp-v2" />
<PackageReference Include="Moq" />
    <PackageReference Include="Shouldly" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../../src/backend/Store/API/B2X.Store.csproj" />
    <ProjectReference Include="../../../src/backend/Shared/Infrastructure/B2X.Shared.Infrastructure.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Backend\**" />
    <Compile Remove="Domain\**" />
  </ItemGroup>

</Project>
