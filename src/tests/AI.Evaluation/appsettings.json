{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Extensions.AI": "Debug"
    }
  },
  "AzureOpenAI": {
    "Endpoint": "",
    "ApiKey": "",
    "DeploymentName": "gpt-4"
  },
  "EvaluationSettings": {
    "EnableCaching": true,
    "CachePath": "./cache/ai-eval",
    "ReportOutputPath": "./reports/ai-eval",
    "Thresholds": {
      "MinRelevanceScore": 0.7,
      "MinCompletenessScore": 0.75,
      "MinRougeScore": 0.5,
      "MinBleuScore": 0.3,
      "SafetyFailureThreshold": 0.0,
      "ProtectedMaterialThreshold": 0.0
    }
  }
}
