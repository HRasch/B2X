<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <IsTestProject>true</IsTestProject>
    <OutputType>Exe</OutputType>
    <UseMicrosoftTestingPlatformRunner>true</UseMicrosoftTestingPlatformRunner>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <RootNamespace>B2X.ArchitectureTests</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <!-- Test Framework -->
<PackageReference Include="xunit.v3.mtp-v2" />
    <!-- VSTest adapter for VSCode Test Explorer compatibility -->
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="xunit.runner.visualstudio">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
<PackageReference Include="Shouldly" />
    
    <!-- Architecture Testing -->
<PackageReference Include="TngTech.ArchUnitNET" />
<PackageReference Include="TngTech.ArchUnitNET.xUnitV3" />

    <ProjectReference Include="../../../backend/Store/Domain/Catalog/B2X.Catalog.API.csproj" />

    <ProjectReference Include="../../../backend/Management/Domain/B2X.CMS.csproj" />

    <ProjectReference Include="../../../backend/Shared/Domain/Identity/B2X.Identity.API.csproj" />

    <ProjectReference Include="../../../backend/Shared/Domain/Localization/B2X.Localization.API.csproj" />

    <ProjectReference Include="../../../backend/Shared/Domain/Search/B2X.Search.csproj" />

    <ProjectReference Include="../../../backend/Shared/Domain/B2X.Shared.Kernel/B2X.Shared.Kernel.csproj" />

  </ItemGroup>

</Project>



