{
  "name": "B2X-store-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--disable-warning=DEP0155\" nuxt build",
    "dev": "cross-env NODE_OPTIONS=\"--disable-warning=DEP0155\" nuxt dev",
    "dev:telemetry": "cross-env ENABLE_TELEMETRY=true OTEL_SERVICE_NAME=frontend-store NODE_OPTIONS=\"--disable-warning=DEP0155\" node --import ./instrumentation.ts node_modules/.bin/nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest run tests/integration",
    "type-check": "nuxt typecheck",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "quality-check": "npm run type-check && npm run lint:check && npm run test:coverage",
    "prepare": "husky install",
    "pre-commit": "npm run quality-check && pwsh ../../scripts/typescript-batch-analysis.ps1 -Domain Store",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
    "e2e:responsive": "playwright test tests/e2e/responsive.spec.ts",
    "e2e:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "e2e:quality": "playwright test tests/e2e/accessibility.spec.ts tests/e2e/responsive.spec.ts tests/e2e/visual-regression.spec.ts",
    "axe": "axe http://localhost:3000 --exit --verbose"
  },
  "dependencies": {
    "@microsoft/signalr": "^8.0.0",
    "@nuxt/devtools": "^3.1.1",
    "@nuxt/kit": "^4.2.2",
    "@nuxtjs/i18n": "^10.2.1",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.3",
    "@sentry/replay": "^7.116.0",
    "@sentry/tracing": "^7.120.4",
    "@sentry/vue": "^10.32.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/dompurify": "^3.0.5",
    "autoprefixer": "^10.4.23",
    "axios": "^1.13.2",
    "daisyui": "^5.5.14",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "html2canvas": "^1.4.1",
    "nuxt": "^4.2.2",
    "pinia": "^3.0.4",
    "polly-js": "^1.8.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vue": "^3.5.26",
    "vue-i18n": "^11.2.8",
    "vue-router": "^4.6.4",
    "vue3-toastify": "^0.2.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.2",
    "@nuxt/eslint-config": "^1.12.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.3",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.208.0",
    "@opentelemetry/resources": "^2.3.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.6.2",
    "express": "^5.2.1",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.6",
    "json-server": "^1.0.0-beta.3",
    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "sass": "^1.97.1",
    "terser": "^5.36.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.1"
  }
}
