{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Services": {
    "ApiGateway": "https://api-gateway.B2X.local",
    "AuthService": "https://auth.B2X.local",
    "TenantService": "https://tenant.B2X.local",
    "LocalizationService": "https://localization.B2X.local"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://app.B2X.local",
      "https://admin.B2X.local"
    ]
  },
  "HealthCheck": {
    "Enabled": true,
    "Interval": 30000,
    "Timeout": 10000
  },
  "ServiceDiscovery": {
    "Enabled": true,
    "ReloadInterval": 300000,
    "ConnectionRetries": 5
  }
}
