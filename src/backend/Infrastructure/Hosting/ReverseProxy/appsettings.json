{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",

  "Multitenancy": {
    "BaseDomain": "b2xgate.com",
    "CustomDomains": {
      "demo.localhost": {
        "TenantId": "00000000-0000-0000-0000-000000000001",
        "TenantSlug": "demo",
        "DisplayName": "Demo Tenant"
      }
    }
  },

  "ReverseProxy": {
    "Routes": {
      "store-route": {
        "ClusterId": "store-cluster",
        "Match": {
          "Path": "/store/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/store" }
        ]
      },
      "admin-route": {
        "ClusterId": "admin-cluster",
        "Match": {
          "Path": "/admin/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/admin" }
        ]
      },
      "management-route": {
        "ClusterId": "management-cluster",
        "Match": {
          "Path": "/management/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/management" }
        ]
      },
      "notifications-route": {
        "ClusterId": "notifications-cluster",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/notifications" }
        ]
      },
      "api-store-route": {
        "ClusterId": "store-cluster",
        "Match": {
          "Path": "/api/store/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/store" },
          { "PathPrefix": "/api" }
        ]
      },
      "api-admin-route": {
        "ClusterId": "admin-cluster",
        "Match": {
          "Path": "/api/admin/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/admin" },
          { "PathPrefix": "/api" }
        ]
      },
      "default-route": {
        "ClusterId": "store-cluster",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "store-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "store-1": {
            "Address": "http://localhost:8000"
          }
        }
      },
      "admin-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "admin-1": {
            "Address": "http://localhost:8080"
          }
        }
      },
      "management-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "management-1": {
            "Address": "http://localhost:8090"
          }
        }
      },
      "notifications-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "notifications-1": {
            "Address": "http://localhost:8095"
          }
        }
      }
    }
  }
}
