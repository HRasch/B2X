<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <RootNamespace>B2X.Shared.Core</RootNamespace>
    <AssemblyName>B2X.Shared.Core</AssemblyName>
    
    <!-- Produce reference assembly to prevent DLL locking during parallel builds -->
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FluentValidation" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../B2X.Shared.Kernel/B2X.Shared.Kernel.csproj" />
    <ProjectReference Include="../B2X.Types/B2X.Types.csproj" />

  </ItemGroup>

</Project>




