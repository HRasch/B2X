    <ProjectReference Include="../../../backend/Shared/Infrastructure/B2X.Shared.Infrastructure.csproj" />

    <ProjectReference Include="../../../backend/Shared/Infrastructure/Middleware/B2X.Shared.Middleware.csproj" />

