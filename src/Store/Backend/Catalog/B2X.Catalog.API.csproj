<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <RootNamespace>B2X.Catalog</RootNamespace>
    <AssemblyName>B2X.Catalog.API</AssemblyName>
    <IsAspireProjectResource>true</IsAspireProjectResource>
  </PropertyGroup>

  <!-- Exclude tests folders from compilation -->
  <ItemGroup>
    <Compile Remove="tests/**" />
    <Compile Remove="tests\**" />
    <Compile Remove="src/Tests/**" />
    <Compile Remove="src\Tests\**" />
    <Compile Remove="**/tests/**" />
    <Compile Remove="**/Tests/**" />
    <None Remove="tests/**" />
    <None Remove="tests\**" />
    <None Remove="src/Tests/**" />
    <None Remove="src\Tests\**" />
    <Content Remove="tests/**" />
    <Content Remove="tests\**" />
    <Content Remove="src/Tests/**" />
    <Content Remove="src\Tests\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" />
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" />
    <PackageReference Include="EFCore.NamingConventions"  />
    <PackageReference Include="MediatR"  />
    <PackageReference Include="FluentValidation"  />
    <PackageReference Include="AutoMapper"  />
    <PackageReference Include="WolverineFx" />
    <PackageReference Include="WolverineFx.Http" />
    <PackageReference Include="Serilog.AspNetCore" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" />
    <PackageReference Include="Elastic.Clients.Elasticsearch" />
    <PackageReference Include="Bogus" />
    <!-- Code Analyzers -->
    <PackageReference Include="SonarAnalyzer.CSharp" />
    <PackageReference Include="Meziantou.Analyzer" />
    <PackageReference Include="SerilogAnalyzer" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../../../src/backend/Infrastructure/Hosting/ServiceDefaults/B2X.ServiceDefaults.csproj" />

    <ProjectReference Include="../../../backend/Shared/Domain/B2X.Shared.Kernel/B2X.Shared.Kernel.csproj" />

