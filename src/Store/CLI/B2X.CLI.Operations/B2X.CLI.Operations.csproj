<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <PublishAot>false</PublishAot>

    <!-- CLI Tool Packing -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>B2X-ops</ToolCommandName>
    <PackageId>B2X.CLI.Operations</PackageId>
    <PackageVersion>1.0.0</PackageVersion>
    <Author>B2X Team</Author>
    <Description>B2X Operations CLI - Platform management and monitoring</Description>
    <!-- Disable CPM for CLI tool (own dependency management) -->
    <ManagePackageVersionsCentrally>false</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" />
    <PackageReference Include="Spectre.Console" />
    <PackageReference Include="Spectre.Console.Json" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\B2X.CLI.Shared\B2X.CLI.Shared.csproj" />

    <ProjectReference Include="..\..\shared\Monitoring\B2X.Shared.Monitoring.csproj" />

    <ProjectReference Include="../../../../backend/Shared/Domain/B2X.Shared.Kernel/B2X.Shared.Kernel.csproj" />

    <ProjectReference Include="..\..\Domain\Shared\B2X.Api.Validation\B2X.Api.Validation.csproj" />

  </ItemGroup>

</Project>


