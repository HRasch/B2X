<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    
    <IsAspireProjectResource>true</IsAspireProjectResource>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" />
    <!-- MCP Protocol -->
    <PackageReference Include="ModelContextProtocol" />
    <!-- AI Providers -->
    <PackageReference Include="OpenAI" />
    <PackageReference Include="Anthropic.SDK" />
    <PackageReference Include="Azure.AI.OpenAI" />
    <!-- Microsoft.Extensions.AI (10.1.1 stable; OpenAI/AzureAIInference are preview-only Jan 2026) -->
    <PackageReference Include="Microsoft.Extensions.AI" />
    <PackageReference Include="Microsoft.Extensions.AI.OpenAI" />
    <PackageReference Include="Microsoft.Extensions.AI.AzureAIInference" />
    <!-- Ollama Support -->
    <PackageReference Include="OllamaSharp" />
    <!-- Wolverine CQRS -->
    <PackageReference Include="WolverineFx" />
    <!-- Database -->
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" />
    <!-- Authentication -->
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" />
    <!-- Encryption -->
    <PackageReference Include="Azure.Security.KeyVault.Secrets" />
    <PackageReference Include="Azure.Identity" />
    <!-- Caching -->
    <PackageReference Include="Microsoft.Extensions.Caching.StackExchangeRedis" />
    <!-- Logging -->
    <PackageReference Include="Serilog.AspNetCore" />
    <PackageReference Include="Microsoft.Extensions.Logging" />
    <PackageReference Include="Microsoft.Extensions.Configuration" />
    <!-- Validation -->
    <PackageReference Include="FluentValidation.AspNetCore" />
  </ItemGroup>

  <ItemGroup>
    <!-- ServiceDefaults for Aspire integration -->
    <ProjectReference Include="../../../../backend/Infrastructure/Hosting/ServiceDefaults/B2X.ServiceDefaults.csproj" />

    <!-- CMS Domain for template validation -->
    <ProjectReference Include="../../../../src/Management/Backend/CMS/B2X.CMS.csproj" />

  </ItemGroup>

</Project>




