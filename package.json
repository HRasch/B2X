{
  "name": "b2connect-workspace",
  "version": "1.0.0",
  "description": "B2Connect - Full Stack Application with .NET Aspire Backend and Vue Frontend",
  "private": true,
  "workspaces": [
    "frontend/Store",
    "frontend/Admin",
    "frontend/Management"
  ],
  "scripts": {
    "install:all": "npm install && npm install --prefix frontend/Store && npm install --prefix frontend/Admin && npm install --prefix frontend/Management",
    "dev": "concurrently \"npm --prefix frontend/Store run dev\" \"npm --prefix frontend/Admin run dev\" \"npm --prefix frontend/Management run dev\" --names \"Store,Admin,Tenant\" --prefix name --kill-others-on-exit",
    "dev:frontend": "npm --prefix frontend/Store run dev",
    "dev:admin": "npm --prefix frontend/Admin run dev",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "format": "prettier --write \"frontend/**/*.{js,ts,vue,json,css,scss,md}\"",
    "format:check": "prettier --check \"frontend/**/*.{js,ts,vue,json,css,scss,md}\"",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "b2connect",
    "vue",
    "aspire",
    "microservices"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.54.0",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "frontend/**/*.{js,ts,vue}": [
      "prettier --write",
      "eslint --fix"
    ],
    "frontend/**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "frontend/**/*.{ts,vue}": [
      "vue-tsc --noEmit"
    ]
  }
}
