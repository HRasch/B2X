{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Aspire.Hosting.Dcp": "Warning"
    }
  },
  "Services": {
    "ApiGateway": "http://127.0.0.1:6000",
    "AuthService": "http://127.0.0.1:9002",
    "TenantService": "http://127.0.0.1:9003",
    "LocalizationService": "http://127.0.0.1:9004",
    "CatalogService": "http://127.0.0.1:9005",
    "LayoutService": "http://127.0.0.1:9006"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://localhost:4200",
      "https://localhost:8000"
    ]
  },
  "HealthCheck": {
    "Enabled": true,
    "Interval": 10000,
    "Timeout": 5000
  },
  "ServiceDiscovery": {
    "Enabled": true,
    "ReloadInterval": 30000,
    "ConnectionRetries": 1
  },
  "Testing": {
    "Mode": "temporary",
    "Environment": "development",
    "SeedOnStartup": false,
    "SeedData": {
      "DefaultTenantCount": 0,
      "UsersPerTenant": 5,
      "SampleProductCount": 50,
      "IncludeCatalogDemo": true,
      "IncludeCmsContent": false
    },
    "Security": {
      "EnforceEnvironmentGating": true,
      "EnableAuditLogging": true,
      "EnforceRoleBasedAccess": true,
      "AllowCrossTenantAccess": false
    }
  }
}
