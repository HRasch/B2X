{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "Logging": {
      "type": "object",
      "description": "Logging configuration for the application",
      "properties": {
        "LogLevel": {
          "type": "object",
          "description": "Log levels for different categories"
        }
      }
    },
    "AllowedHosts": {
      "type": "string",
      "description": "Hosts allowed to access the application",
      "default": "*",
      "examples": ["*", "localhost", "example.com"]
    },
    "Services": {
      "type": "object",
      "description": "Service configuration endpoints"
    },
    "Cors": {
      "type": "object",
      "description": "CORS (Cross-Origin Resource Sharing) settings"
    },
    "HealthCheck": {
      "type": "object",
      "description": "Health check configuration",
      "properties": {
        "Enabled": {
          "type": "boolean",
          "description": "Whether health checks are enabled",
          "default": true
        },
        "Interval": {
          "type": "string",
          "description": "Health check interval",
          "pattern": "^\\d+[smhd]$",
          "examples": ["30s", "5m", "1h"]
        },
        "Timeout": {
          "type": "string",
          "description": "Health check timeout",
          "pattern": "^\\d+[smhd]$"
        }
      }
    },
    "ServiceDiscovery": {
      "type": "object",
      "description": "Service discovery configuration"
    },
    "AI": {
      "type": "object",
      "description": "AI service configuration"
    }
  },
  "required": ["Logging", "AllowedHosts"]
}