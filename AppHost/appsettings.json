{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Services": {
    "ApiGateway": "http://api-gateway:8080",
    "AuthService": "http://auth-service:8080",
    "TenantService": "http://tenant-service:8080",
    "LocalizationService": "http://localization-service:8080"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://localhost:4200"
    ]
  },
  "HealthCheck": {
    "Enabled": true,
    "Interval": 30000,
    "Timeout": 5000
  },
  "ServiceDiscovery": {
    "Enabled": true,
    "ReloadInterval": 60000,
    "ConnectionRetries": 3
  },
  "AI": {
    "EnableLocalFallback": true,  // Set to true to enable automatic fallback to local Ollama when rate limited
    "Ollama": {
      "DefaultEndpoint": "http://localhost:11434",
      "Endpoints": {
        // "tenant-id": "http://ollama-server:11434"  // Per-tenant Ollama endpoints
      }
    }
  }
}
