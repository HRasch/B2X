{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": []
  },
  "Services": {
    "Identity": {
      "Url": "http://auth-service"
    }
  },
  "Jwt": {
    "Issuer": "B2Connect",
    "Audience": "B2Connect",
    "TokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "RateLimiting": {
    "GeneralLimit": 100,
    "AuthLimit": 5,
    "RegisterLimit": 3,
    "StrictLimit": 2
  },
  "Database": {
    "Provider": "inmemory"
  },
  "ConnectionStrings": {
    "Catalog": "Server=(localdb)\\mssqllocaldb;Database=B2Connect_Catalog;Trusted_Connection=true;",
    "UserDb": "Server=localhost;Port=5432;Database=b2connect_user;User Id=postgres;Password=postgres;"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/auth/{**catch-all}" }
        ]
      },
      "localization-route": {
        "ClusterId": "localization-cluster",
        "Match": {
          "Path": "/api/localization/{**catch-all}"
        }
      },
      "theming-route": {
        "ClusterId": "theming-cluster",
        "Match": {
          "Path": "/api/theming/{**catch-all}"
        }
      },
      "tenancy-route": {
        "ClusterId": "tenancy-cluster",
        "Match": {
          "Path": "/api/tenants/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity": {
            "Address": "http://auth-service"
          }
        }
      },
      "localization-cluster": {
        "Destinations": {
          "localization": {
            "Address": "http://localization-service"
          }
        }
      },
      "theming-cluster": {
        "Destinations": {
          "theming": {
            "Address": "http://theming-service"
          }
        }
      },
      "tenancy-cluster": {
        "Destinations": {
          "tenancy": {
            "Address": "http://tenant-service"
          }
        }
      }
    }
  }
}
