{
  "Elasticsearch": {
    "Nodes": [
      "http://elasticsearch:9200"
    ],
    "Username": "elastic",
    "Password": "changeme",
    "IndexName": "products",
    "IndexAlias": "products-alias",
    "Settings": {
      "NumberOfShards": 3,
      "NumberOfReplicas": 1,
      "RefreshInterval": "1s",
      "MaxResultWindow": 50000
    }
  },
  "RabbitMQ": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "ExchangeName": "product-events",
    "QueueName": "search-index-updates",
    "RoutingKeys": [
      "product.created",
      "product.updated",
      "product.deleted",
      "products.bulk-imported"
    ],
    "RetryPolicy": {
      "MaxRetries": 3,
      "InitialDelayMs": 1000,
      "MaxDelayMs": 30000
    }
  },
  "Redis": {
    "Connection": "redis:6379",
    "CacheDuration": {
      "SearchResults": 300,
      "ProductDetails": 600,
      "Suggestions": 600
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Elastic": "Debug",
      "RabbitMQ": "Debug"
    }
  },
  "SearchPerformance": {
    "MaxPageSize": 100,
    "DefaultPageSize": 20,
    "TargetLatencyMs": 100,
    "SuggestionMaxResults": 20
  }
}
