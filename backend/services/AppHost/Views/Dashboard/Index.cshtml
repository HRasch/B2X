@model List<B2Connect.AppHost.Controllers.ServiceStatus>

@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>B2Connect Backend Dashboard</title>
    
    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/css/adminlte.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    
    <style>
        body {
            font-family: 'Source Sans Pro', sans-serif;
        }
        .service-card {
            transition: transform 0.3s, box-shadow 0.3s;
        }
        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        }
        .status-icon {
            font-size: 2rem;
            margin-bottom: 10px;
        }
        .status-icon.healthy {
            color: #28a745;
        }
        .status-icon.unhealthy {
            color: #dc3545;
        }
        .status-icon.unavailable {
            color: #6c757d;
        }
        .dashboard-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px 0;
            margin-bottom: 30px;
            border-radius: 0.5rem;
        }
        .dashboard-header h1 {
            margin: 0;
            font-weight: 700;
        }
        .dashboard-header p {
            margin: 10px 0 0 0;
            opacity: 0.9;
        }
    </style>
</head>
<body class="layout-top-nav layout-navbar-fixed">

<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
        <div class="container-fluid">
            <a href="/" class="navbar-brand">
                <span class="brand-text font-weight-light"><i class="fas fa-cube"></i> B2Connect</span>
            </a>
            <button class="order-md-last btn btn-link" type="button" data-toggle="navbar-search">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </nav>

    <!-- Content -->
    <div class="content-wrapper">
        <div class="container-fluid mt-4">
            <!-- Dashboard Header -->
            <div class="dashboard-header">
                <h1><i class="fas fa-tachometer-alt"></i> Backend Services Dashboard</h1>
                <p>Real-time monitoring of B2Connect microservices</p>
            </div>

            <!-- Stats Row -->
            <div class="row mb-4">
                <div class="col-lg-4">
                    <div class="info-box">
                        <span class="info-box-icon bg-info"><i class="fas fa-cube"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Total Services</span>
                            <span class="info-box-number">@Model.Count</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="info-box">
                        <span class="info-box-icon bg-success"><i class="fas fa-check-circle"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Healthy Services</span>
                            <span class="info-box-number">@Model.Count(s => s.IsHealthy)</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="info-box">
                        <span class="info-box-icon bg-danger"><i class="fas fa-exclamation-circle"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Unhealthy Services</span>
                            <span class="info-box-number">@Model.Count(s => !s.IsHealthy)</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Services Grid -->
            <div class="row">
                @foreach (var service in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card service-card h-100 @(service.IsHealthy ? "" : "border-danger")">
                            <div class="card-body text-center">
                                <div class="status-icon @(service.IsHealthy ? "healthy" : service.Status == "Unavailable" ? "unavailable" : "unhealthy")">
                                    @if (service.IsHealthy)
                                    {
                                        <i class="fas fa-check-circle"></i>
                                    }
                                    else if (service.Status == "Unavailable")
                                    {
                                        <i class="fas fa-question-circle"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times-circle"></i>
                                    }
                                </div>
                                
                                <h5 class="card-title">@service.Name</h5>
                                
                                <p class="text-muted mb-3">
                                    <small>Port: <code>@service.Port</code></small>
                                </p>

                                <div class="mb-3">
                                    <span class="badge badge-@service.StatusBadge">
                                        <i class="fas fa-circle"></i> @service.Status
                                    </span>
                                </div>

                                <a href="@service.Url" target="_blank" class="btn btn-sm btn-primary">
                                    <i class="fas fa-external-link-alt"></i> Visit Service
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Service Details Table -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Service Details</h3>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Service Name</th>
                                        <th>Port</th>
                                        <th>URL</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var service in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@service.Name</strong>
                                            </td>
                                            <td>
                                                <code>@service.Port</code>
                                            </td>
                                            <td>
                                                <code>@service.Url</code>
                                            </td>
                                            <td>
                                                <span class="badge badge-@service.StatusBadge">@service.Status</span>
                                            </td>
                                            <td>
                                                <a href="@service.Url/health" target="_blank" class="btn btn-xs btn-info" title="Health Check">
                                                    <i class="fas fa-heartbeat"></i>
                                                </a>
                                                <a href="@service.Url" target="_blank" class="btn btn-xs btn-primary" title="Visit">
                                                    <i class="fas fa-external-link-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Auto Refresh Info -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Auto-Refresh:</strong> This dashboard checks service health every 10 seconds.
                        Last updated: <span id="lastUpdate">just now</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="float-right d-none d-sm-inline">
            <strong>B2Connect</strong> Backend Services Dashboard
        </div>
        <strong>Â© 2025</strong> All rights reserved.
    </footer>
</div>

<!-- AdminLTE JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.2/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/js/adminlte.min.js"></script>

<script>
    // Auto refresh functionality
    function updateLastRefresh() {
        document.getElementById('lastUpdate').textContent = 'just now';
    }

    // Reload page every 10 seconds
    setInterval(() => {
        location.reload();
    }, 10000);

    updateLastRefresh();
</script>

</body>
</html>
