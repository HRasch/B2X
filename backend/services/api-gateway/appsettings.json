{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:5173"]
  },
  "Auth": {
    "Authority": "http://localhost:5001",
    "Audience": "b2connect-api"
  },
  "ReverseProxy": {
    "Routes": {
      "auth": {
        "ClusterId": "auth-service",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "tenant": {
        "ClusterId": "tenant-service",
        "Match": {
          "Path": "/api/tenants/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth-service": {
        "Destinations": {
          "auth-service-dest": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "tenant-service": {
        "Destinations": {
          "tenant-service-dest": {
            "Address": "http://localhost:5002"
          }
        }
      }
    }
  }
}
