{
  "settings": {
    "index": {
      "number_of_shards": 3,
      "number_of_replicas": 1,
      "refresh_interval": "1s",
      "max_result_window": 50000,
      "analysis": {
        "analyzer": {
          "autocomplete_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "stop",
              "autocomplete_filter"
            ]
          },
          "text_analyzer": {
            "type": "standard",
            "stopwords": "_english_"
          }
        },
        "filter": {
          "autocomplete_filter": {
            "type": "edge_ngram",
            "min_gram": 2,
            "max_gram": 20
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "productId": {
        "type": "keyword"
      },
      "sku": {
        "type": "keyword"
      },
      "name": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword"
          },
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete_analyzer"
          }
        },
        "analyzer": "text_analyzer"
      },
      "description": {
        "type": "text",
        "analyzer": "text_analyzer"
      },
      "category": {
        "type": "keyword",
        "fields": {
          "text": {
            "type": "text"
          }
        }
      },
      "price": {
        "type": "scaled_float",
        "scaling_factor": 100
      },
      "b2bPrice": {
        "type": "scaled_float",
        "scaling_factor": 100
      },
      "stockQuantity": {
        "type": "integer"
      },
      "isAvailable": {
        "type": "boolean"
      },
      "tags": {
        "type": "keyword"
      },
      "brand": {
        "type": "keyword",
        "fields": {
          "text": {
            "type": "text"
          }
        }
      },
      "material": {
        "type": "keyword"
      },
      "colors": {
        "type": "keyword"
      },
      "sizes": {
        "type": "keyword"
      },
      "customAttributes": {
        "type": "object",
        "enabled": true
      },
      "imageUrls": {
        "type": "keyword",
        "index": false
      },
      "createdAt": {
        "type": "date"
      },
      "updatedAt": {
        "type": "date"
      },
      "tenantId": {
        "type": "keyword"
      },
      "popularityScore": {
        "type": "double"
      },
      "reviewCount": {
        "type": "integer"
      },
      "averageRating": {
        "type": "scaled_float",
        "scaling_factor": 10
      }
    }
  }
}
