<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <InvariantGlobalization>false</InvariantGlobalization>
    <AssemblyName>B2Connect.CatalogService</AssemblyName>
    <RootNamespace>B2Connect.CatalogService</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <!-- Shared Core Infrastructure -->
    <ProjectReference Include="..\..\shared\B2Connect.Shared.Core\B2Connect.Shared.Core.csproj" />
    <ProjectReference Include="..\..\shared\B2Connect.Shared.Data\B2Connect.Shared.Data.csproj" />
    <ProjectReference Include="..\..\shared\B2Connect.Shared.Search\B2Connect.Shared.Search.csproj" />
    <ProjectReference Include="..\..\shared\B2Connect.Shared.Messaging\B2Connect.Shared.Messaging.csproj" />
    <ProjectReference Include="..\..\shared\types\B2Connect.Types.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Service-specific packages -->
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" />
    <PackageReference Include="Swashbuckle.AspNetCore" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" />
    <PackageReference Include="Bogus" />
    <!-- Explicit declarations for code that uses these namespaces -->
    <PackageReference Include="WolverineFx" />
    <PackageReference Include="WolverineFx.Http" />
    <PackageReference Include="WolverineFx.RabbitMq" />
    <PackageReference Include="Elastic.Clients.Elasticsearch" />
    <PackageReference Include="Quartz" />
    <PackageReference Include="Quartz.Extensions.Hosting" />
    <!-- Testing packages -->
    <PackageReference Include="xunit" />
    <PackageReference Include="xunit.runner.visualstudio" />
    <PackageReference Include="Moq" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
  </ItemGroup>

  <ItemGroup>
    <!-- Include shared AOP and validation source files -->
    <Compile Include="..\..\shared\aop\*.cs" Link="Infrastructure\%(Filename)%(Extension)" />
    <Compile Include="..\..\shared\validators\*.cs" Link="Infrastructure\%(Filename)%(Extension)" />
    <Compile Include="..\..\shared\extensions\*.cs" Link="Infrastructure\%(Filename)%(Extension)" />
  </ItemGroup>

</Project>
