{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 Full Stack",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/AppHost/bin/Debug/net10.0/B2X.AppHost.dll",
      "preLaunchTask": "build-apphost",
      "args": [],
      "cwd": "${workspaceFolder}/AppHost",
      "stopAtEntry": false,
      "serverReadyAction": {
        "pattern": "dashboard",
        "uriFormat": "http://localhost:15500",
        "action": "openExternally"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:15500",
        "DOTNET_DASHBOARD_OTLP_ENDPOINT_URL": "http://localhost:4317",
        "ASPIRE_ALLOW_UNSECURED_TRANSPORT": "true",
        "DOTNET_DASHBOARD_UNSECURED_ALLOW_ANONYMOUS": "true",
        "Database__Provider": "inmemory",
        "Database__Password": "postgres",
        "Redis__Password": "",
        "Elasticsearch__Password": "elastic",
        "RabbitMQ__Password": "guest",
        "Jwt__Secret": "dev-jwt-secret-minimum-32-characters-required!!!",
        "Encryption__Key": "dev-encryption-key-minimum-32-characters-required!!!",
        "Azure__KeyVault__UseMocked": "true"
      },
      "console": "externalTerminal"
    },
