{
  "name": "wolverine-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for .NET/Wolverine CQRS analysis in B2X",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
