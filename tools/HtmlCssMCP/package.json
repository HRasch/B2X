{
  "name": "htmlcss-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP server for HTML/CSS analysis in B2X",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "html",
    "css",
    "mcp",
    "ai",
    "frontend",
    "accessibility",
    "semantic-html",
    "css-analysis"
  ],
  "author": "B2X Frontend Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axe-core": "^4.8.0",
    "css-tree": "^2.3.1",
    "csso": "^5.0.5",
    "fast-glob": "^3.3.0",
    "htmlparser2": "^9.1.0",
    "jsdom": "^23.0.0",
    "parse5": "^7.1.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.4"
  },
  "devDependencies": {
    "@types/css-tree": "^2.3.0",
    "@types/jest": "^29.5.0",
    "@types/jsdom": "^21.1.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
