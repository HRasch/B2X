{
  "name": "monitoring-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP server for service monitoring, telemetry, and log analysis",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "monitoring",
    "telemetry",
    "logging",
    "observability",
    "mcp",
    "aspire",
    "dotnet"
  ],
  "author": "B2Connect Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "winston": "^3.11.0",
    "node-fetch": "^3.3.2",
    "glob": "^10.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/glob": "^8.1.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  }
}